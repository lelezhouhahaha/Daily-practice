<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pop_txt_bg"
    android:orientation="vertical"
    android:overScrollMode="never"
    tools:context=".activity.BatterySwitchActivity">

    <include
        layout="@layout/include_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/start_tag"
            android:textColor="@color/black_dan"
            android:textSize="@dimen/fontSize" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/sunmi_message_switch_battery_debug1"
            android:textColor="@color/black_dan"
            android:textSize="@dimen/fontmidSize"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/message_debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message"
            android:layout_gravity="center"
            android:text="@string/sunmi_message_switch_battery_debug2"
            android:textColor="@color/red"
            android:textSize="@dimen/fontmidSize"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/message_debug2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_debug"
            android:layout_gravity="center"
            android:text="@string/sunmi_message_switch_battery_debug3"
            android:textColor="@color/black_dan"
            android:textSize="@dimen/fontmidSize"
            android:visibility="gone"/>

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/below_ll"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="@color/black_dan"
            android:textSize="@dimen/fontSize"
            android:visibility="gone"/>

        <include
            layout="@layout/activity_below"
            android:id="@+id/below_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>