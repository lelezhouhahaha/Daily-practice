<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pop_txt_bg"
    android:orientation="vertical"
    android:overScrollMode="never">

    <include
        layout="@layout/include_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            layout="@layout/activity_below"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>

        <Button
            android:id="@+id/ninepin_key1"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="120dp"
            android:text= "9PIN_KEY1"/>

        <Button
            android:id="@+id/ninepin_key2"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="120dp"
            android:layout_toRightOf="@+id/ninepin_key1"
            android:text= "9PIN_KEY2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/led_root_view"
            android:orientation="vertical"
            />
    </RelativeLayout>

</LinearLayout>