<resources>
    <declare-styleable name="ItemView">
        <attr name="itv_title" format="string|reference" />
        <attr name="itv_summary" format="string|reference" />
        <attr name="itv_result" format="string|reference" />
        <attr name="itv_pcolor" format="color" />
        <attr name="itv_fcolor" format="color" />
        <attr name="itv_ncolor" format="color" />
        <attr name="itv_state">
            <enum name="nulll" value="0" />
            <enum name="pass" value="1" />
            <enum name="fail" value="-1" />
            <enum name="nofun" value="-2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ChartView">
        <attr name="text_size" format="dimension|reference"/>
        <attr name="vertical_text_size" format="dimension|reference"/>
        <attr name="text_paint_width" format="float"/>
        <attr name="row_and_col_paint_width" format="float"/>
        <attr name="arrow_paint_width" format="float"/>
        <attr name="row_color" format="color|reference"/>
        <attr name="col_color" format="color|reference"/>
        <attr name="arrow_color" format="color|reference"/>
        <attr name="text_color" format="color|reference"/>
        <attr name="fold_line_color" format="color|reference"/>
        <attr name="vertical_line_color" format="color|reference"/>
        <attr name="vertical_text_color" format="color|reference"/>

