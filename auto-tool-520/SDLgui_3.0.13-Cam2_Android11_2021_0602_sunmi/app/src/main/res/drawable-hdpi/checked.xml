<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>

            <item >
                <shape
                    android:thickness="3dp"
                    android:shape="ring"
                    android:useLevel="false"
                    android:innerRadius="5sp">
                    <solid android:color="#99ffdd" />
                    <padding android:bottom="7dp"
                        android:left="7dp"
                        android:right="7dp"
                        android:top="7dp"/>
                    <size
                        android:width="20sp"
                        android:height="20sp" />
                </shape>
            </item>

            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#777" />
                    <solid android:color="#99ffdd" />
                    <padding android:bottom="50dp"
                        android:left="16dp"
                        android:right="16dp"
                        android:top="50dp"/>
                    <size
                        android:width="10sp"
                        android:height="10sp" />
                </shape>
            </item>


